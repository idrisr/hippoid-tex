\newcommand{\imagedef}{
\begin{align*}
    X \subseteq A &\implies \text{image}(X) =& f(X)&=\set{f(x): x \in X} &\subseteq B\\
    Y \subseteq B &\implies \text{preimage}(Y) =& f^{-1}(Y)&=\set{x \in A: f(x) \in Y} &\subseteq A
\end{align*}
}

\newcommand{\inj}{
\item For a function to be injective it must satisfy the following implication
\begin{align*}
    \forall a,b \in A\mid a\neq b\implies f(a)\neq f(b)
\end{align*}
}

\newcommand{\surj}{
\item For a function to be surjective it must satisfy the following implication.
\begin{align*}
    \forall b \in B \implies \exists a \in A | f(a) = b
\end{align*}
}

